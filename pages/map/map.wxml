<map id="map"
	longitude="{{position.longitude}}" latitude="{{position.latitude}}" scale="16" show-location wx:if="{{map}}" style="width: {{mapSize.width}}px; height: {{mapSize.height - 56}}px;"
	controls="{{controls}}" bindcontroltap="controltap">
</map>
<view class="btn-area">
	<navigator hover-class="active" class="now">
		<view class="icon-map"></view>
		<view class="text">地图</view>
	</navigator>
	<navigator hover-class="active">
		<view class="icon-explore"></view>
		<view class="text">广场</view>
	</navigator>
	<navigator hover-class="active">
		<view class="icon-heartbeat"></view>
		<view class="text">表白</view>
	</navigator>
	<navigator hover-class="active">
		<view class="icon-user"></view>
		<view class="text">我的</view>
	</navigator>
</view>