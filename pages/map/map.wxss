cover-view  {
	line-height: normal;
	white-space: normal;
}

cover-image {
	display: inline-block;
	line-height: normal;
}

#map {
	width: 100%;
	height: 100%;
	position: relative;
}

.focus {
  color: #3E8AEE;
  font-size: 36rpx;
}

.dropdown {
  z-index: 1;
  width: 100%;
  height: 340rpx;
  position: absolute;
  left: 0;
  background-color: #fff;
  box-shadow: 0 50px 100px rgba(50, 50, 93, .1),
    0 15px 35px rgba(50, 50, 93, .15),
    0 5px 15px rgba(0, 0, 0, .1);
  transition-property: top;
  transition: ease .5s;
}

.message {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 227rpx;
  padding-bottom: 5rpx;
  border-bottom: 1px solid #eee;
}

.userInfo {
  height: 200rpx;
  margin-right: 20rpx;
}

/*用户头像*/
.userinfo-avatar {
  box-sizing: border-box;
  width: 124rpx;
  height: 124rpx;
  margin: 20rpx;
  border-radius: 50%;
  border: 2px solid #999;
}

.userinfo-nickname {
  color: #aaa;
  text-align: center;
  font-size: 36rpx;
  line-height: 36rpx;
}

.userinfo-location {
  color: #666;
  text-align: center;
}

.messInfo {
  width: 100%;
  overflow: hidden;
  padding: 10rpx 10rpx 0rpx;
}

.messInfo cover-view {
  height: 200rpx;
}

.operation {
  display: flex;
  flex-direction: row;
  flex-grow: 1;
  height: 113rpx;
}

.distance {
  color: #999;
  font-size: 24rpx;
  text-align: center;
  margin-top: 18rpx;
}

.btn {
  height: 66rpx;
  line-height: 66rpx;
  margin-top: 18rpx;
  border-radius: 4px;
  box-shadow: 0 4px 6px rgba(50, 50, 93, .11), 0 1px 3px rgba(0, 0, 0, .08);
  background: #fff;
  padding: 0 28rpx;
  color: #333;
  transition: all .1s ease;
}

.btnHover {
  color: #666;
  background-color: #f6f9fc;
  transform: translateY(1px);
  box-shadow: 0 4px 6px rgba(50,50,93,.11),0 1px 3px rgba(0,0,0,.08);
}

.btn.contact {
  background: #3E8AEE;
  color: #fff;
}